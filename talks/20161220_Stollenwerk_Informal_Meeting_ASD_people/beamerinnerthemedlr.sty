\newlength{\dlrleftmargin}
\def\dlrleftmargin{1.0cm}

% Title page
\defbeamertemplate*{title page}{dlr}[1][]
{ 
    \begin{beamercolorbox}[wd=12cm,leftskip=\dlrleftmargin,#1]{title page header}
      \usebeamerfont{title}\inserttitle\par%
    \end{beamercolorbox}%
    \vskip0.75cm%
    \begin{beamercolorbox}[wd=12cm,rightskip=1.5cm,leftskip=\dlrleftmargin,#1]{author}
      \usebeamerfont{author}\insertauthor%
    \end{beamercolorbox}
     \vskip0.5cm%
    \begin{beamercolorbox}[wd=12cm,leftskip=\dlrleftmargin,#1]{institute}
      \usebeamerfont{institute}\insertinstitute%
    \end{beamercolorbox}
%    \begin{beamercolorbox}[wd=12cm,leftskip=\dlrleftmargin,#1]{date}
%      \usebeamerfont{author}\insertdate%
%    \end{beamercolorbox}
  \vfill
}

