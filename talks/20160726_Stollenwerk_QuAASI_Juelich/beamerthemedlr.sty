\mode<presentation>

% Requirement
\RequirePackage{graphicx}
\RequirePackage{xcolor}

% Settings
\useinnertheme{dlr}
\useoutertheme{dlr}
\usecolortheme{dlr}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{blocks}[rounded][shadow=true]  
\setbeamersize{text margin left=\dlrleftmargin,text margin right=0.3cm}

% fonts for title page, can be overridden by the user in the tex file (I think)
% to fit things nicely on the page
\setbeamerfont{title}{size=\LARGE,series=\bfseries}
\setbeamerfont{author}{size=\small}
\setbeamerfont{institute}{size=\small}

\setbeamerfont{frametitle}{size=\large,series=\bfseries}

\setbeamerfont{block body}{size=\normalsize}
\setbeamerfont{block title}{size=\normalsize}
\setbeamerfont{block body alerted}{size=\normalsize}
\setbeamerfont{block title alerted}{size=\normalsize}
% subtitles are currently not displayed at all, see beamerouterthemedlr.sty
% they are generated by the syntax \frame{title}{subtitle}
%\setbeamerfont{framesubtitle}{size=\tiny}

\definecolor{dlrgrey}{rgb}{0.4, 0.4, 0.4}

\setbeamercolor{enumerate item}{fg=black}
\setbeamercolor{itemize item}{fg=black}
\setbeamercolor{itemize subitem}{fg=black}
\setbeamertemplate{itemize item}[tiny bullet]
\setbeamertemplate{itemize subitem}[tiny bullet]
\setbeamertemplate{itemize subitem}[tiny bullet]
\setbeamercolor{enumerate item}{fg=black}
\setbeamercolor{enumerate subitem}{fg=black}
% not sure how these should look...
%\setbeamertemplate{enumerate item}[tiny bullet]

\mode<all>

